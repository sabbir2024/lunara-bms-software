{
  "name": "luanara_bms",
  "version": "1.0.0",
  "description": "Electron app with Vite, React and Express",
  "main": "src/main/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "electron:start": "cross-env NODE_ENV=production electron .",
    "dist": "npm run build && cross-env NODE_ENV=production electron-builder",
    "electron:build": "npm run build && cross-env NODE_ENV=production electron-builder",
    "serve": "node src/server/index.js",
    "postinstall": "electron-builder install-app-deps",
    "dist:packager": "electron-packager . LuanaraBMS --platform=win32 --arch=x64 --out=dist-packager --overwrite",
    "test:production": "npm run build && cross-env NODE_ENV=production node src/server/index.js"
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "express"
  ],
  "author": "Sabbir bin kabir",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "cross-env": "^10.0.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.2",
    "vite": "^7.1.3",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-query": "^5.85.5",
    "add": "^2.0.6",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "daisyui": "^5.0.50",
    "express": "^4.18.2",
    "pdf-viewer": "^0.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.8.1",
    "react-router-dom": "^7.8.1",
    "react-to-print": "^3.1.1",
    "serve-static": "^2.2.0",
    "tailwindcss": "^4.1.12"
  },
  "build": {
    "appId": "com.luanara.bms",
    "productName": "Luanara BMS",
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/server/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
